{
  "name": "codewar",
  "version": "1.0.0",
  "description": "A MERN stack contest evaluation platform",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:visual && npm run test:security",
    "test:unit": "jest --config jest.config.js --testMatch='**/*.unit.test.js'",
    "test:integration": "jest --config jest.config.js --testMatch='**/*.integration.test.js' --runInBand",
    "test:e2e": "playwright test --config=playwright.config.js",
    "test:visual": "playwright test --config=playwright.config.js --project=visual",
    "test:security": "jest --config jest.config.js --testMatch='**/security.test.js'",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "npm run test:coverage && npm run test:e2e -- --reporter=dot",
    "test:update-snapshots": "jest --updateSnapshot && playwright test --update-snapshots",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "k6": "^0.0.0",
    "mongodb-memory-server": "^9.1.1",
    "msw": "^2.0.11",
    "playwright": "^1.40.0",
    "playwright-visual-comparison": "^1.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "zaproxy": "^2.0.0-rc.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=20.0.0"
  }
} 